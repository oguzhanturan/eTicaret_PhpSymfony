{% extends 'frontbase.html.twig' %}

{% block title %}İletişim & Hakkımızda  {{ data[0].title }} {% endblock %}
{% block keywords %}{{ data[0].keywords}} {% endblock %}
{% block description %}{{ data[0].description }} {% endblock %}
{% block content %}
    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>Hakkımızda & Iletisim</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="margin-top: 15px"></div>
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="woocommerce-info"><h1>Bize Ulaşın</h1>
                    {{ include('messages.html.twig') }}

                <form id="login-form-wrap" action="" method="post" name="messages">

                    <p class="form-row form-row-first">
                        <label for="username">Adınız <span class="required">*</span></label>
                        <input type="text" id="name" name="messages[name]" class="input-text">
                    </p>
                    <p class="form-row form-row-first   ">
                        <label for="email">E-mail <span class="required">*</span></label>
                        <input type="email" id="email" name="messages[email]" class="input-text">
                    </p>

                    <p class="form-row form-row-last">
                        <label for="messsage">Mesaj <span class="required">*</span></label>
                        <textarea type="text" id="messsage" name="messages[messsage]" class="text-capitalize" rows="7" cols="23"></textarea>
                    </p>


                    <div class="clear"></div>


                    <p class="form-row">
                        <input type="hidden" name="token" value="{{ csrf_token('form-message') }}" />

                        <input type="submit" value="Send" name="login" class="button">
                    </p>


                    <div class="clear"></div>
                </form>
            </div>
            </div>
            <div class="col-md-8">
                <div class="product-content-right">
                    <div class="woocommerce-info"> <h1>Hakkımızda</h1>

                        <div class="woocommerce-text">


                                {{ data[0].aboutus|raw }}
                                {{ data[0].contact }}


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block productwidget%} {{ include('home/_productwidget.html.twig') }} {% endblock %}
