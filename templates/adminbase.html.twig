<!-- BOOTSTRAP SCRIPTS -->
<script src="{{ asset('admin') }}/assets/js/bootstrap.js"></script>
<!-- METISMENU SCRIPTS -->
<script src="{{ asset('admin') }}/assets/js/jquery.metisMenu.js"></script>
<!-- CUSTOM SCRIPTS -->
<script src="{{ asset('admin') }}/assets/js/custom.js"></script>
{% block javascript %} {% endblock %}
</div>
</div>
</body>
</html>
