{% extends 'adminbase.html.twig' %}

{% block title %}Orders index{% endblock %}

{% block content %}

                        <table class="table">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Amount</th>
                                <th>City</th>
                                <th>Phone</th>
                                <th>Shipinfo</th>
                                <th>Status</th>
                                <th>Note</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for order in orders %}
                                <tr>
                                    <td>{{ order.name }}</td>
                                    <td>{{ order.amount }}</td>
                                    <td>{{ order.city }}</td>
                                    <td>{{ order.phone }}</td>
                                    <td>{{ order.shipinfo }}</td>
                                    <td>{{ order.status }}</td>
                                    <td>{{ order.note }}</td>
                                    <td>
                                        <a href=" javascript:openWin('{{ path('admin_orders_show', {'id': order.id}) }}','','toolbar=no,scrollbars=no,resizable=no,top=200,left=500,width=600,height=800')">
                                        Show</a></td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
{% endblock %}
