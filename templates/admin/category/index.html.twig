{% extends 'adminbase.html.twig' %}

{% block title %}category index{% endblock %}

{% block content %}
    <h1 class="page-subhead-line">
    <a href="{{ path('admin_category_new') }}"><button type="button" class="btn btn-success">Kategori Ekle</button></a>
    </h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Parent Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.parentid }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.status }}</td>

                <td>
                    <div class="btn-group">
                        <button class="btn btn-primary">Action</button>
                        <button data-toggle="dropdown" class="btn btn-primary dropdown-toggle"><span class="caret"></span></button>
                        <ul class="dropdown-menu">

                            <li ><a href="{{ path('admin_category_show', {'id': category.id}) }}" >Kategori Bilgileri</a></li>
                            <li ><a href="{{ path('admin_category_edit', {'id': category.id, 'pid':category.parentid}) }}" >DÃ¼zenle</a></li>

                        </ul>
                    </div>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

